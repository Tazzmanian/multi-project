{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    // "sourceMap": true,
    // "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      // "node_modules/@angular"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": { 
      "@angular/*": ["node_modules/@angular/*", "node_modules/@angular/common/*", "@angular/common/http/src/xhr"],
     },
  },
  "angularCompilerOptions": {
    "entryModule": "app/app.server.module#AppServerModule"
  }
}